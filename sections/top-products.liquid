<section class="p-products">
  <div class="p-products__inner">
    <div class="p-products__bg">
      {{ 'products-bg.png' | file_img_url : 'master' | img_tag: 'products-bg','resp-none' }}      
      {{ 'products-bg_resp.png' | file_img_url : 'master' | img_tag: 'products-bg','resp-block' }}            
      {{ 'project-bg_spbtm.png' | file_img_url : 'master' | img_tag: 'project-bg_spbtm','sp-block' }}
    </div>

    <div class="p-products__rollcake">
            {{ 'product-rollcake.png' | file_img_url : 'master' | img_tag: 'product-rollcake','fallin-after' }}      
    </div>

    <div class="p-products__cheesecake">
            {{ 'product-cheesecake.png' | file_img_url : 'master' | img_tag: 'product-cheesecake' ,'fade-after'}}      
    </div>

    <div class="p-products__mistletoe">
            {{ 'product-mistletoe.png' | file_img_url : 'master' | img_tag: 'product-mistletoe' ,'sway-s-after'}}      
    </div>

    <div class="p-products__people1">
