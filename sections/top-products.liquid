      <p class="p-products__ttl c-ttl en">PRODUCTS</p>
      {{ 'project-underline.png' | file_img_url : 'master' | img_tag: 'project-underline.png' }}
    </div>
    <div class="p-products__mdl fadeY-after">
      {% if section.settings.products != blank %}
        <p class="p-products__description c-description">{{ section.settings.products }}</p>
        {% endif %}
